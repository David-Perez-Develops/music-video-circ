{
  "schema_version": 1,
  "meta": {
    "name": "Minimal Ring",
    "author": "NCS",
    "created": "2024-01-01"
  },
  "output": {
    "resolution": {"width": 1920, "height": 1080},
    "fps": 24,
    "aspect_mode": "fit",
    "profile": "default"
  },
  "background": {
    "type": "solid",
    "colors": ["#000000", "#111111"],
    "angle": 0.0,
    "anim": null,
    "reactivity": null
  },
  "visual": {
    "mode": {"ring": true, "bars": false},
    "ring": {"base_radius": 0.5, "thickness": 0.05, "glow": 0.2},
    "bars": {"count": 64, "scale": 1.0, "distribution": "log", "roundness": 0.1},
    "color": {"palette": "auto", "gamma": 1.0},
    "mapping": {"attack_ms": 10, "release_ms": 100, "sensitivity": 1.0, "threshold": 0.0}
  },
  "center_image": {
    "path": null,
    "reactivity": null
  },
  "audio": {
    "normalize": true,
    "analysis": {
      "sr": 44100,
      "n_fft": 2048,
      "hop": 512,
      "bands": [[20, 250], [250, 2000], [2000, 8000]],
      "beat_track": true
    }
  }
}

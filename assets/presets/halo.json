{
  "schema_version": 1,
  "meta": {
    "name": "Halo",
    "author": "NCS",
    "created": "2024-01-01"
  },
  "output": {
    "resolution": {"width": 1920, "height": 1080},
    "fps": 24,
    "aspect_mode": "fit",
    "profile": "default"
  },
  "background": {
    "type": "gradient_dynamic",
    "colors": ["#FF0000", "#00FF00", "#0000FF"],
    "angle": 0.0,
    "anim": null,
    "reactivity": {"target": "global", "intensity": 1.0}
  },
  "visual": {
    "mode": {"ring": true, "bars": false},
    "ring": {"base_radius": 0.6, "thickness": 0.07, "glow": 0.4},
    "bars": {"count": 64, "scale": 1.0, "distribution": "log", "roundness": 0.1},
    "color": {"palette": "auto", "gamma": 1.0},
    "mapping": {"attack_ms": 10, "release_ms": 100, "sensitivity": 1.0, "threshold": 0.0}
  },
  "center_image": {
    "path": null,
    "reactivity": {"scale_on_beat": 1.0, "rotate_per_sec": 30.0, "shake": 0.0, "bloom": 0.5}
  },
  "audio": {
    "normalize": true,
    "analysis": {
      "sr": 44100,
      "n_fft": 2048,
      "hop": 512,
      "bands": [[20, 250], [250, 2000], [2000, 8000]],
      "beat_track": true
    }
  }
}
